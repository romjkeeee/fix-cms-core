{% extends 'admin::auth.layout' %}

{% block content %}
    <div class="card-box">
        <div class="panel-heading">
            <h3 class="text-center">{{ trans('admin::auth.f2a_verify') }}</h3>
        </div>
        <div class="panel-body">
            <form method="post" action="" role="form" class="text-center m-t-20" id="attributeForm" method="post"
                  data-bv-message="This value is not valid"
                  data-bv-feedbackicons="false">
                {{ csrf_field() }}

                <div class="form-group m-b-0 text-left">
                    <input type="text" name="code" required class="form-control"
                           value="{{ old('code') }}"
                           placeholder="{{ trans('admin::auth.enter_code_lbl') }}"
                           data-bv-notempty-message='{{ trans('admin::auth.enter_code_err') }}'>
                </div>

                <div class="form-group text-center m-t-40">
                    <div class="col-md-12 reset">
                        <button class="btn btn-default btn-block text-uppercase waves-effect waves-light" type="submit">{{ trans('admin::auth.f2a_btn') }}</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
{% endblock %}
