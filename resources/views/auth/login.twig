{% extends 'admin::auth.layout' %}

{% block content %}
    <div class="card-box">
        <div class="panel-heading">
            <h3 class="text-center"><strong class="text-default">{{ trans('admin::auth.login_in_panel') }}</strong></h3>
        </div>

        <div class="panel-body">

            <form method="POST" action="{{ route('admin::login') }}" id="attributeForm" class="form-horizontal m-t-20"
                  data-bv-message="This value is not valid"
                  data-bv-feedbackicons="false">
                {{ csrf_field() }}

                <div class="form-group ">
                    <div class="col-xs-12">
                        <input class="form-control" type="text"  name="email"  id="firstName" placeholder="{{ trans('admin::auth.email_lbl') }}"
                               value="{{ old('email') }}"
                               data-bv-notempty="true"
                               data-bv-notempty-message='{{ trans('admin::auth.email_err') }}'>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12">
                        <input class="form-control" id="password1" type="password" name="password" placeholder="{{ trans('admin::auth.password_lbl') }}"
                               data-bv-notempty="true"
                               data-bv-notempty-message='{{ trans('admin::auth.password_err') }}'>
                    </div>
                </div>

                <div class="form-group ">
                    <div class="col-xs-12">
                        <div class="checkbox checkbox-custom">
                            <input id="checkbox-signup" type="checkbox" name="remember">
                            <label for="checkbox-signup">{{ trans('admin::auth.remember_me') }}</label>
                        </div>
                    </div>
                </div>

                <div class="form-group text-center m-t-40">
                    <div class="col-xs-12">
                        <button class="btn btn-default btn-block text-uppercase waves-effect waves-light" type="submit">{{ trans('admin::auth.login_btn') }}</button>
                    </div>
                </div>

                <div class="form-group m-t-30 m-b-0">
                    <div class="col-sm-12">
                        <a href="{{ route('admin::password_reset') }}" class="text-dark"><i class="fa fa-lock m-r-5"></i>{{ trans('admin::auth.forgot_password') }}</a>
                    </div>
                </div>
            </form>

        </div>
    </div>
{% endblock %}
