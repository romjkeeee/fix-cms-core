<div class="row">
    <div class="col-sm-2 col-md-2 col-lg-2"></div>
    <div class="col-sm-10 col-md-10 col-lg-10 save-inf">

        {% for btn in buttons %}
            <button {{ html_attributes(btn.attributes) }} class="btn btn-default waves-effect waves-light">
                {% if btn.icon %}
                    <i class="fa {{ btn.icon }}">&nbsp;&nbsp;</i>
                {% endif %}
                {{ btn.text }}
            </button>
        {% endfor %}

    </div>
</div>
