{% extends 'admin::form.field._layout' %}
{% block input %}
    {% filter html_inline %}
        <div class="input-group">
            <input type="email" class="form-control {{ options.class }}" id="{{ id }}" name="{{ name }}" value="{{ old(name, value) }}"

                   {% if options.placeholder %}placeholder="{{ options.placeholder }}"{% endif %}
                   {% if readonly %}readonly{% endif %}
                   {% if disabled %}disabled{% endif %}

                   data-bv-emailaddress="true"
                   data-bv-emailaddress-message="{{ trans('admin::form.validation.email') }}"

                   {% if required %}
                       data-bv-notempty="true"
                       data-bv-notempty-message='{{ trans('admin::form.validation.not_empty', {label: options.label}) }}'
                   {% endif %}
            />
            <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
        </div>
    {% endfilter %}

    {% if options.help %}
        <span class="help-block"><small>{{ options.help|nl2br }}</small></span>
    {% endif %}
{% endblock %}
